@model FIT5032_ozzFIT_V2.Models.Comments

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Event @ViewBag.EventName </h2>

<div class="panel panel-primary">

    <div class="panel-body">
        @using (Html.BeginForm())
