            <hr />

            <div class="form-group">
                <label class="col-md-4 control-label">Comment </label>
                <div class="col-md-8">
                    <div class="input-group">
                        @Html.TextAreaFor(m => m.CDescription, new { rows = "20", style = "resize:none;width:400px;", placeholder = Html.DisplayNameFor(m => m.CDescription), @class = "form-control input-lg textarea-editor" })
                        @Html.ValidationMessageFor(m => m.CDescription)
                    </div>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Comment" class="btn btn-default" />
                </div>

            </div>
