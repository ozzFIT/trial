<section id="main-area">
    <div class="container">
        <div class="row">
            <div id="artCarousel" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    <li data-target="#artCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#artCarousel" data-slide-to="1"></li>
                    <li data-target="#artCarousel" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img srcset="~/Content/UsersIndex.jpg" alt="Group Fitness">
                        <div class="carousel-caption">
                            <h3>ozzFIT</h3>
                            <p class="lead">Fitness is a lifestyle</p>
                            <br>
                            <p>Choose to be fit with ozzFIT</p>
                            <p>"With ozzFIT not only can you send you healthy activities but also helps you grow healthy together with people of same interest." </p>
                        </div>
                    </div>




                    <div class="item">
                        <img srcset="~/Content/events.jpg" alt="Events">
                        <div class="carousel-caption">
                            <h3>Events</h3>
                            <p>"A Healthy Outside starts from the Inside" </p>
                        </div>
                    </div>

                </div>
                    
                 
                    <a class="left carousel-control" href="#artCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#artCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
        </div>
    </div>
</section>







<div class="bs-docs-featurette">
    <div class="container">
        <h2 class="bs-docs-featurette-title">Designed for everyone, everywhere</h2>
        <p class="lead">ozzFIT strives to make healthier options easy to choose</p>
        <hr class="half-rule">
        <div class="row">
            <div class="col-md-4">
                <h2>Getting started</h2>
                <p>
                    Sign up to ozzFIT to get events details and healthy meal options every day.
                </p>

                @Html.ActionLink("Sign Up", "Register", "Account", new { area = "" }, new { @class = "btn btn-default" })
            </div>
            <div class="col-md-4">
                <h2>Browse events</h2>
                <p>Signup for events and get more out of life. Get started now</p>
                @Html.ActionLink("Events", "Index", "Events", new { area = "" }, new { @class = "btn btn-default" })
            </div>
            <div class="col-md-4">
                <h2>Connect</h2>
                <p>Connect with your friends and work together towards a healthier goal.</p>
                @* @Html.ActionLink("Events", "Index", "Events", new { area = "" }, new { @class = "btn btn-default" })*@
            </div>
        </div>

    </div>
</div>

